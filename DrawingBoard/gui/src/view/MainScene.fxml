<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainSceneController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="8.0" AnchorPane.rightAnchor="8.0" AnchorPane.topAnchor="8.0">
         <left>
            <VBox prefHeight="400.0" prefWidth="163.0" spacing="20.0" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
               <children>
                  <Button fx:id="btnDrawLine" mnemonicParsing="false" onAction="#btnDrawLineOnAction" text="Draw Line">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></Button>
                  <Button fx:id="btnDrawrRectangle" layoutX="18.0" layoutY="18.0" mnemonicParsing="false" onAction="#btnDrawrRectangleOnAction" text="Draw Rectangle">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></Button>
               </children>
            </VBox>
         </left>
         <center>
            <Pane fx:id="pnlDrawingBoard" prefHeight="200.0" prefWidth="200.0" style="-fx-border-width: 2; -fx-border-color: black;" BorderPane.alignment="CENTER" />
         </center></BorderPane>
   </children>
</AnchorPane>
